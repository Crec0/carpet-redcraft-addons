# Main function

    # Modifying the armor stand data if some contions are met
        execute if score $gb.better_armorstands.ShowArms gb.configs matches 1 if entity @s[nbt=!{ShowArms:1b}] if entity @e[type=minecraft:item,tag=!global.ignore,tag=!global.ignore.kill,nbt=!{Age:6000s},nbt={Item:{id:"minecraft:stick",Count:2b}},distance=..1] run function redpack:better_armorstands/events/showarms
        execute if score $gb.better_armorstands.NoBasePlate gb.configs matches 1 if entity @s[nbt=!{NoBasePlate:1b}] if entity @e[type=minecraft:item,tag=!global.ignore,tag=!global.ignore.kill,nbt=!{Age:6000s},nbt={Item:{id:"minecraft:smooth_stone_slab",Count:1b}},distance=..1] run function redpack:better_armorstands/events/nobaseplate
        execute if score $gb.better_armorstands.Rotate gb.configs matches 1 if entity @s[tag=!gb.Rotate] if entity @e[type=minecraft:item,tag=!global.ignore,tag=!global.ignore.kill,nbt=!{Age:6000s},nbt={Item:{id:"minecraft:flower_pot",Count:1b}},distance=..1] run function redpack:better_armorstands/events/rotate
        execute if score $gb.better_armorstands.NoGravity gb.configs matches 1 if entity @s[nbt=!{NoGravity:1b}] if entity @e[type=minecraft:item,tag=!global.ignore,tag=!global.ignore.kill,nbt=!{Age:6000s},nbt={Item:{id:"minecraft:feather",Count:1b}},distance=..1] run function redpack:better_armorstands/events/nogravity
        execute if score $gb.better_armorstands.Invisible gb.configs matches 1 if entity @s[nbt=!{Invisible:1b}] if entity @e[type=minecraft:item,tag=!global.ignore,tag=!global.ignore.kill,nbt=!{Age:6000s},nbt={Item:{id:"minecraft:phantom_membrane",Count:1b}},distance=..1] run function redpack:better_armorstands/events/invisible
        execute if score $gb.better_armorstands.Visible gb.configs matches 1 if entity @s[nbt=!{Invisible:0b}] if entity @e[type=minecraft:item,tag=!global.ignore,tag=!global.ignore.kill,nbt=!{Age:6000s},nbt={Item:{id:"minecraft:ender_eye",Count:1b}},distance=..1] run function redpack:better_armorstands/events/visible
        execute if score $gb.better_armorstands.SmokeParticles gb.configs matches 1 if entity @s[tag=!gb.SmokeParticles] if entity @e[type=minecraft:item,tag=!global.ignore,tag=!global.ignore.kill,nbt=!{Age:6000s},nbt={Item:{id:"minecraft:campfire",Count:1b}},distance=..1] run function redpack:better_armorstands/events/campfiresmokeparticles
        execute if score $gb.better_armorstands.SmokeParticles gb.configs matches 1 if entity @s[tag=!gb.SmokeParticles] if entity @e[type=minecraft:item,tag=!global.ignore,tag=!global.ignore.kill,nbt=!{Age:6000s},nbt={Item:{id:"minecraft:soul_campfire",Count:1b}},distance=..1] run function redpack:better_armorstands/events/soulcampfiresmokeparticles
        execute if score $gb.better_armorstands.Small gb.configs matches 1 if entity @s[nbt=!{Small:1b}] if entity @e[type=minecraft:item,tag=!global.ignore,tag=!global.ignore.kill,nbt=!{Age:6000s},nbt={Item:{id:"minecraft:stone_button",Count:1b}},distance=..1] run function redpack:better_armorstands/events/stonesmall
        execute if score $gb.better_armorstands.Small gb.configs matches 1 if entity @s[nbt=!{Small:1b}] if entity @e[type=minecraft:item,tag=!global.ignore,tag=!global.ignore.kill,nbt=!{Age:6000s},nbt={Item:{id:"minecraft:polished_blackstone_button",Count:1b}},distance=..1] run function redpack:better_armorstands/events/blackstonesmall
        execute if score $gb.better_armorstands.Big gb.configs matches 1 if entity @s[nbt={Small:1b}] if entity @e[type=minecraft:item,tag=!global.ignore,tag=!global.ignore.kill,nbt=!{Age:6000s},nbt={Item:{id:"minecraft:stone_pressure_plate",Count:1b}},distance=..1] run function redpack:better_armorstands/events/stonebig
        execute if score $gb.better_armorstands.Big gb.configs matches 1 if entity @s[nbt={Small:1b}] if entity @e[type=minecraft:item,tag=!global.ignore,tag=!global.ignore.kill,nbt=!{Age:6000s},nbt={Item:{id:"minecraft:polished_blackstone_pressure_plate",Count:1b}},distance=..1] run function redpack:better_armorstands/events/blackstonebig
        execute if score $gb.better_armorstands.FlameParticles gb.configs matches 1 if entity @s[tag=!gb.FlameParticles] if entity @e[type=minecraft:item,tag=!global.ignore,tag=!global.ignore.kill,nbt=!{Age:6000s},nbt={Item:{id:"minecraft:blaze_powder",Count:1b}},distance=..1] run function redpack:better_armorstands/events/flameparticles
        
    # Running the particles command
        execute if entity @s[tag=gb.SmokeParticles] run particle minecraft:campfire_signal_smoke ~ ~ ~ .2 1 .3 .05 0
        execute if entity @s[tag=gb.FlameParticles] run particle minecraft:flame ~ ~ ~ .01 .01 .01 .005 2
